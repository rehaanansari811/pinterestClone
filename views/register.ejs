<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-cover bg-center bg-[url(https://images.unsplash.com/photo-1541550427901-710d2b6a2be2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGFic3RhcmN0JTIwaGQnfGVufDB8fDB8fHww)] flex items-center justify-center ">
  <div class="w-96 min-h-80 bg-zinc-100 px-4 py-5 rounded-2xl flex items-center justify-start flex-col">
    <img src="/images/logo of pinterest.png" alt="" 
    class="h-10 w-10">
    <h1 class="text-4xl leading-none my-4 tracking-tight ">Register to Pinterest</h1>
    <form action="/register" method="post" class="flex items-center justify-center flex-col w-4/5">
      <input type="text" name="username" placeholder="Enter your username" class="w-full px-4 py-2 mt-2 text-gray-700 bg-gray-200 rounded-xl focus:outline-none focus:bg-white focus:text-gray-700" required>
      <input type="text" name="name" placeholder="Enter your fullname" class="w-full px-4 py-2 mt-2 text-gray-700 bg-gray-200 rounded-xl focus:outline-none focus:bg-white focus:text-gray-700" required>
      <input type="email" name="email" placeholder="Enter your email" class="w-full px-4 py-2 mt-2 text-gray-700 bg-gray-200 rounded-xl focus:outline-none focus:bg-white focus:text-gray-700" required>
      <input type="number" name="number" placeholder="Enter your number" class="w-full px-4 py-2 mt-2 text-gray-700 bg-gray-200 rounded-xl focus:outline-none focus:bg-white focus:text-gray-700" required>
      <input type="password" name="password" placeholder="Enter your password" class="w-full px-4 py-2 mt-2 text-gray-700 bg-gray-200 rounded-xl focus:outline-none focus:bg-white focus:text-gray-700" required>
      <button type="submit" class="w-40 h-8 px-3 mt-4 text-white bg-red-600 rounded-full focus:outline-none focus:bg-red-700">Register</button>
    </form>
    <br>
    <a href="/" class="mt-2 inline-block font-semibold text-zinc-500 text-xs">Already a user? Login now!</a>

    
  </div>
</div>

